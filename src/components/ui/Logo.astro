---
const { class: className = "", color = "default" } = Astro.props;
---
<a href="/" class={`group flex items-center gap-3 decoration-none ${className}`}>
  <!-- Artistic Logo Icon -->
  <div class={`relative w-12 h-12 overflow-hidden rounded-full border-2 flex items-center justify-center p-0.5 shadow-sm group-hover:shadow-md transition-shadow duration-300 ${color === 'white' ? 'border-white bg-transparent' : 'border-sea-blue bg-white'}`}>
    <img 
      src="/images/logo_icon.png" 
      alt="Boerderij Logo" 
      class={`w-full h-full object-cover rounded-full transition-all duration-300 ${color === 'white' ? 'brightness-0 invert' : ''}`} 
    />
  </div>
  
  <div class="flex flex-col justify-center translate-y-0.5">
    <span class={`font-body text-[0.65rem] uppercase tracking-[0.2em] leading-tight font-bold ${color === 'white' ? 'text-white/80' : 'text-stone-500'}`}>
      Boerderij
    </span>
    <span class={`font-heading font-bold text-xl md:text-2xl leading-none tracking-tight ${color === 'white' ? 'text-white' : 'text-sea-blue group-hover:text-sky-700'} transition-colors`}>
      Voorste Eng
    </span>
  </div>
</a>
