---
const { class: className = "", color = "default" } = Astro.props;
---
  <a href="/" class={`group flex items-center gap-4 decoration-none ${className}`}>
  <!-- Luxury Monogram Icon -->
  <div class={`relative w-12 h-12 flex items-center justify-center border border-current rounded-full transition-colors duration-300 ${color === 'white' ? 'text-white border-white/30' : 'text-sea-blue border-sea-blue/30'}`}>
    <span class="font-heading font-normal text-xl translate-y-[1px] tracking-widest">VE</span>
  </div>
  <div class="flex flex-col select-none">
    <span class={`font-body text-[0.6rem] uppercase tracking-[0.25em] font-medium leading-none mb-0.5 ${color === 'white' ? 'text-white/80' : 'text-stone-500'}`}>
      Boerderij
    </span>
    <span class={`font-heading text-2xl md:text-3xl font-light tracking-wide leading-none ${color === 'white' ? 'text-white' : 'text-slate-900'} group-hover:opacity-80 transition-opacity`}>
      Voorste Eng
    </span>
  </div>
</a>
