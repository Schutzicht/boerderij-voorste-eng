---
import ScrollReveal from '../ui/ScrollReveal.astro';
import ParallaxImage from '../ui/ParallaxImage.astro';

const { lang } = Astro.props;

const content = {
  nl: {
    title: "Rust & Natuur",
    desc: "Boerderij Voorste Eng is meer dan een verblijf. Het is uw thuisbasis op de Veluwe. Gelegen in het hart van Otterlo, op loopafstand van Nationaal Park De Hoge Veluwe, biedt onze verbouwde boerderij een perfecte mix van luxe, comfort en natuur.",
    stat1: "1 km",
    stat1Label: "Hoge Veluwe",
    stat2: "Privacy",
    stat2Label: "Eigen terras"
  },
  en: {
    title: "Peace & Nature",
    desc: "Boerderij Voorste Eng is more than a stay. It is your home base on the Veluwe. Located in the heart of Otterlo, within walking distance of National Park De Hoge Veluwe, our renovated farmhouse offers a perfect mix of luxury, comfort, and nature.",
    stat1: "1 km",
    stat1Label: "Hoge Veluwe",
    stat2: "Privacy",
    stat2Label: "Private terrace"
  },
  de: {
    title: "Ruhe & Natur",
    desc: "Boerderij Voorste Eng ist mehr als ein Aufenthalt. Es ist Ihre Basis in der Veluwe. Im Herzen von Otterlo gelegen, nur wenige Gehminuten vom Nationalpark De Hoge Veluwe entfernt, bietet unser renovierter Bauernhof eine perfekte Mischung aus Luxus, Komfort und Natur.",
    stat1: "1 km",
    stat1Label: "Hoge Veluwe",
    stat2: "Privatsph√§re",
    stat2Label: "Eigene Terrasse"
  }
};

const t = content[lang] || content.nl;
---

<section class="py-32 px-4 bg-stone-50 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-24 items-center">
      
      <!-- Text Column (Editorial Style) -->
      <div class="lg:col-span-5 order-2 lg:order-1 relative">
        <ScrollReveal animation="fade-up" duration={1}>
            <div class="w-12 h-1 bg-bordeaux mb-8"></div>
            <h2 class="text-4xl md:text-5xl font-heading font-light text-slate-900 mb-8 leading-tight">
              {t.title}
            </h2>
            <p class="text-lg md:text-xl text-stone-600 leading-relaxed font-light mb-12">
              {t.desc}
            </p>
            
            <div class="flex gap-12 border-t border-stone-200 pt-8">
                <div>
                    <div class="text-3xl font-heading font-light text-bordeaux mb-1">{t.stat1}</div>
                    <div class="text-xs uppercase tracking-widest text-stone-400">{t.stat1Label}</div>
                </div>
                <div>
                    <div class="text-3xl font-heading font-light text-bordeaux mb-1">{t.stat2}</div>
                    <div class="text-xs uppercase tracking-widest text-stone-400">{t.stat2Label}</div>
                </div>
            </div>
        </ScrollReveal>
      </div>

      <div class="lg:col-span-7 order-1 lg:order-2">
         <div class="relative pl-0 lg:pl-12">
            <ParallaxImage 
               src="/images/hoge_veluwe_park.png" 
               alt="Rust en Natuur Veluwe" 
               height="h-[600px] md:h-[700px]" 
               class="rounded-none shadow-2xl"
            />
         </div>
      </div>

    </div>
  </div>
</section>
