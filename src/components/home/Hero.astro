---
import ScrollReveal from '../ui/ScrollReveal.astro';

const { lang } = Astro.props;

const content = {
  nl: {
    subtitle: "Luxe vakantiewoningen in het hart van Otterlo",
    cta: "Bekijk aanbod"
  },
  en: {
    subtitle: "Luxury holiday homes in the heart of Otterlo",
    cta: "View offer"
  },
  de: {
    subtitle: "Luxusferienhäuser im Herzen von Otterlo",
    cta: "Angebot ansehen"
  }
};

const t = content[lang] || content.nl;
---

<section class="relative h-[85vh] md:h-screen min-h-[600px] md:min-h-[800px] flex items-center justify-center overflow-hidden">
  
  <div class="absolute inset-0 z-0">
    <img 
      src="/images/real/exterior/exterior-6.avif" 
      alt="Boerderij Voorste Eng Otterlo" 
      class="w-full h-full object-cover animate-scale-slow"
      loading="eager"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-stone-900/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 max-w-5xl mx-auto mt-0 md:mt-20">
    
    <ScrollReveal animation="fade-up" duration={1.2} delay={0.2}>
        <p class="text-white/90 text-xs md:text-base uppercase tracking-[0.3em] mb-4 md:mb-6 font-medium">
            Otterlo, Hoge Veluwe
        </p>
    </ScrollReveal>

    <div class="overflow-hidden mb-6 md:mb-8 pb-4">
        <h1 class="text-5xl md:text-8xl lg:text-9xl text-white font-heading font-light tracking-tight leading-none drop-shadow-sm">
            <span class="block animate-reveal-up" style="animation-delay: 0.5s">Boerderij</span>
            <span class="block italic font-normal text-white/90 animate-reveal-up" style="animation-delay: 0.7s">Voorste Eng</span>
        </h1>
    </div>

    <ScrollReveal animation="fade-up" duration={1.2} delay={1.0}>
        <div class="w-12 md:w-16 h-[1px] bg-white/60 mx-auto mb-6 md:mb-8"></div>
        <p class="text-white/90 text-base md:text-xl font-light tracking-wide max-w-xl mx-auto mb-8 md:mb-12">
            {lang === 'nl' ? 'Luxe vakantiewoningen in het hart van Otterlo' : (lang === 'de' ? 'Luxusferienhäuser im Herzen von Otterlo' : 'Luxury holiday homes in the heart of Otterlo')}
        </p>
    </ScrollReveal>

    <ScrollReveal animation="fade-up" duration={1} delay={1.3}>
        <a 
            href={`/${lang}/accommodatie`} 
            class="group inline-block px-8 py-4 bg-white text-stone-900 border border-transparent hover:border-white/30 hover:bg-white/10 hover:text-white hover:backdrop-blur-sm font-medium uppercase tracking-widest text-xs transition-all duration-500 rounded-full"
        >
            {t.cta}
        </a>
    </ScrollReveal>

  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-10 hidden md:block animate-pulse-slow">
     <div class="w-[1px] h-24 bg-gradient-to-b from-white to-transparent opacity-50"></div>
  </div>

</section>

<style>
    /* Slow Ken Burns Effect */
    @keyframes scale-slow {
        0% { transform: scale(1); }
        100% { transform: scale(1.15); }
    }
    .animate-scale-slow {
        animation: scale-slow 25s ease-in-out infinite alternate;
    }

    /* Text Reveal */
    @keyframes reveal-up {
        0% { transform: translateY(100%); opacity: 0; }
        100% { transform: translateY(0); opacity: 1; }
    }
    .animate-reveal-up {
        animation: reveal-up 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
        transform: translateY(100%);
    }

    .animate-pulse-slow {
        animation: pulse 3s infinite;
    }
    @keyframes pulse {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.8; }
    }
</style>
