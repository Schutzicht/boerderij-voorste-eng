---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/home/Hero.astro';
import EditorialIntro from '../../components/home/EditorialIntro.astro';
import FeatureRows from '../../components/home/FeatureRows.astro';
import ScrollReveal from '../../components/ui/ScrollReveal.astro';
import ParallaxImage from '../../components/ui/ParallaxImage.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'nl' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params;

const title = {
  nl: "Boerderij Voorste Eng - Luxe Verblijf",
  en: "Boerderij Voorste Eng - Luxury Stay",
  de: "Boerderij Voorste Eng - Luxusaufenthalt"
};
---

<Layout title={title[lang]} lang={lang}>
  
  <Hero lang={lang} />
  
  <EditorialIntro lang={lang} />
  
  <FeatureRows lang={lang} />

  <!-- Host Section: Premium "Floating" Design -->
  <section class="py-24 bg-stone-50 relative overflow-hidden">
     <div class="max-w-5xl mx-auto px-4 relative z-10">
        <div class="flex flex-col md:flex-row items-center gap-12 md:gap-16">
            <!-- Floating Image -->
            <div class="w-full md:w-5/12 relative">
                <ScrollReveal animation="fade-up" duration={1.2}>
                    <div class="relative aspect-[3/4] max-w-sm mx-auto md:mx-0 shadow-xl rounded-sm overflow-hidden">
                        <img 
                            src="/images/wildlife_cows.png" 
                            alt="Gea - Uw Gastvrouw" 
                            class="w-full h-full object-cover scale-105 hover:scale-100 transition-transform duration-1000"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
                        <div class="absolute bottom-8 left-8 text-white">
                            <div class="font-heading text-3xl">Gea</div>
                            <div class="text-sm uppercase tracking-widest opacity-80">{lang === 'nl' ? 'Uw Gastvrouw' : 'Your Host'}</div>
                        </div>
                    </div>
                </ScrollReveal>
                <!-- Decorative element behind -->
                <div class="absolute -top-10 -left-10 w-full h-full border border-sea-blue/10 -z-10 hidden md:block"></div>
            </div>

            <!-- Text Content -->
            <div class="w-full md:w-1/2">
                <ScrollReveal animation="fade-up" delay={0.3}>
                    <h2 class="text-4xl md:text-6xl font-heading font-light text-slate-900 mb-8">
                        {lang === 'nl' ? 'Welkom in Otterlo' : lang === 'de' ? 'Willkommen in Otterlo' : 'Welcome to Otterlo'}
                    </h2>
                    <p class="text-xl text-stone-600 font-light leading-relaxed mb-8 italic">
                        "{lang === 'nl' ? 'Geniet van de rust en ruimte in onze vernieuwde boerderij. Met de Hoge Veluwe als achtertuin geven we u graag de beste tips voor een ontspannen verblijf in de natuur.' : 
                        lang === 'de' ? 'Genießen Sie Ruhe und Weite in unserem renovierten Bauernhof. Mit der Hoge Veluwe als Hinterhof geben wir Ihnen gerne die besten Tipps für einen entspannten Aufenthalt in der Natur.' : 
                        'Enjoy peace and space in our renovated farmhouse. With the Hoge Veluwe as our backyard, we are happy to give you the best tips for a relaxing stay in nature.'}"
                    </p>
                    <div class="w-24 h-[1px] bg-sea-blue/30"></div>
                </ScrollReveal>
            </div>
        </div>
     </div>
  </section>

</Layout>
