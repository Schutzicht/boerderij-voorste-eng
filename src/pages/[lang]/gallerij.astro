---
import Layout from '../../layouts/Layout.astro';
import ScrollReveal from '../../components/ui/ScrollReveal.astro';
import ParallaxImage from '../../components/ui/ParallaxImage.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'nl' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params;

const title = {
  nl: "Gallerij",
  en: "Gallery",
  de: "Galerie"
};

const subtitle = {
  nl: "Een impressie van sfeer en omgeving",
  en: "An impression of atmosphere and surroundings",
  de: "Ein Eindruck von Atmosph√§re und Umgebung"
};

const images = [
  // Exterior
  { src: "/images/real/exterior/exterior-1.avif" },
  { src: "/images/real/exterior/exterior-2.avif" },
  { src: "/images/real/exterior/exterior-3.avif" },
  { src: "/images/real/exterior/exterior-4.avif" },
  // Interior - Living Room
  { src: "/images/real/living-room/living-room-1.avif" },
  { src: "/images/real/living-room/living-room-2.avif" },
  { src: "/images/real/living-room/living-room-3.avif" },
  // Interior - Bedroom
  { src: "/images/real/bedroom/bedroom-1.avif" },
  { src: "/images/real/bedroom/bedroom-2.avif" },
  // Interior - Kitchen
  { src: "/images/real/kitchen/kitchen-1.avif" },
  { src: "/images/real/kitchen/kitchen-2.avif" },
  // Interior - Bathroom
  { src: "/images/real/bathroom/bathroom-1.avif" },
  { src: "/images/real/rooms/peerdestal/badkamer-nieuw-1.jpg" },
  { src: "/images/real/rooms/peerdestal/badkamer-nieuw-2.jpg" },
  // Exterior - Terrace & Breakfast
  { src: "/images/real/terrace/terrace-1.avif" },
  { src: "/images/real/rooms/peerdestal/terras-ontbijt.jpg" },
  { src: "/images/real/rooms/peerdestal/ontbijt-terras-detail.jpg" },
  // Details & Atmosphere
  { src: "/images/real/rooms/oude-schuur/kapstok-detail.jpg" },
  { src: "/images/real/details/boek-op-stoel.jpg" },
  { src: "/images/real/details/boek-salontafel.jpg" },
  { src: "/images/real/details/lichtinval-woonkamer.jpg" }
];
---

<Layout title={`Boerderij Voorste Eng - ${title[lang]}`} lang={lang}>
  
  <div class="relative bg-stone-50 py-32 text-center text-slate-800">
      <ScrollReveal animation="fade-up">
         <h1 class="font-heading text-5xl md:text-7xl font-light mb-8 text-bordeaux tracking-tight">{title[lang]}</h1>
         <p class="max-w-2xl mx-auto text-stone-600 text-xl font-light leading-relaxed italic">{subtitle[lang]}</p>
         <div class="w-16 h-[1px] bg-bordeaux/30 mx-auto mt-12"></div>
      </ScrollReveal>
  </div>

  <div class="max-w-[90rem] mx-auto px-4 sm:px-6 lg:px-8 pb-32">
    <!-- Masonry Layout using CSS columns -->
    <!-- CSS Masonry Layout (Gap-free) -->
    <!-- Mobile: Flex Column (Stack) | Desktop: Masonry Columns -->
    <div class="flex flex-col md:block md:columns-2 lg:columns-3 xl:columns-4 gap-4 space-y-4">
      {images.map((img, index) => (
            <div class="break-inside-avoid relative group cursor-pointer overflow-hidden rounded-sm mb-4 w-full" onclick={`openLightbox(${index})`}>
              <ScrollReveal animation="fade-up" delay={(index % 4) * 0.1} duration={0.8}>
                 <div class="w-full relative">
                    <img 
                      src={img.src} 
                      alt={`Gallery image ${index + 1}`} 
                      class="w-full h-auto object-cover transition-transform duration-1000 group-hover:scale-105"
                      loading="lazy"
                    />
                    
                    {/* Overlay on hover */}
                    <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    
                    {/* Zoom Icon */}
                    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-4 group-hover:translate-y-0">
                        <div class="bg-white/10 backdrop-blur-sm p-4 rounded-full border border-white/20">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                            </svg>
                        </div>
                    </div>
                 </div>
              </ScrollReveal>
            </div>
      ))}
    </div>
  </div>
</Layout>

<!-- Enhanced Lightbox Implementation -->
<dialog id="lightbox" class="backdrop:bg-black/95 bg-transparent p-0 overflow-hidden w-full h-full max-w-full max-h-full m-0 focus:outline-none">
  <div class="relative w-screen h-screen flex items-center justify-center group select-none">
    
    <!-- Close Button -->
    <button onclick="closeLightbox()" class="absolute top-6 right-6 text-white/70 hover:text-white z-50 p-2 rounded-full transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Previous Button -->
    <button onclick="prevImage()" class="absolute left-6 text-white/50 hover:text-white hover:bg-white/10 z-50 p-4 rounded-full transition-all hidden md:block">
       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
         <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
       </svg>
    </button>

    <!-- Image Container with animation -->
    <div class="relative max-w-[90vw] max-h-[90vh]">
        <img id="lightbox-img" src="" alt="Zoom" class="max-w-full max-h-[90vh] object-contain shadow-2xl rounded-sm scale-95 opacity-0 transition-all duration-500 ease-out" />
        <div id="lightbox-caption" class="absolute bottom-0 left-0 right-0 text-center text-white/80 font-heading text-sm py-4 translate-y-full"></div>
    </div>

    <!-- Next Button -->
    <button onclick="nextImage()" class="absolute right-6 text-white/50 hover:text-white hover:bg-white/10 z-50 p-4 rounded-full transition-all hidden md:block">
       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
         <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
       </svg>
    </button>

  </div>
</dialog>

<script define:vars={{ images }}>
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img');
  let currentIndex = 0;

  window.openLightbox = (index) => {
    currentIndex = index;
    updateImage();
    lightbox.showModal();
    requestAnimationFrame(() => {
      lightboxImg.classList.remove('scale-95', 'opacity-0');
      lightboxImg.classList.add('scale-100', 'opacity-100');
    });
    document.body.style.overflow = 'hidden'; 
  };

  window.closeLightbox = () => {
    lightboxImg.classList.remove('scale-100', 'opacity-100');
    lightboxImg.classList.add('scale-95', 'opacity-0');
    setTimeout(() => {
        lightbox.close();
        document.body.style.overflow = '';
    }, 300);
  };

  window.updateImage = () => {
    lightboxImg.style.opacity = '0.5';
    // Small timeout to create a slight transition effect between images
    setTimeout(() => {
        lightboxImg.src = images[currentIndex].src;
        lightboxImg.onload = () => {
            lightboxImg.style.opacity = '1';
        };
    }, 150);
  };

  window.nextImage = (e) => {
    if(e) e.stopPropagation();
    currentIndex = (currentIndex + 1) % images.length;
    updateImage();
  };

  window.prevImage = (e) => {
    if(e) e.stopPropagation();
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    updateImage();
  };

  lightbox.addEventListener('click', (e) => {
    if (e.target === lightbox || e.target.closest('.group') === e.target) {
        closeLightbox();
    }
  });

  document.addEventListener('keydown', (e) => {
    if (!lightbox.open) return;
    if (e.key === 'ArrowRight') nextImage();
    if (e.key === 'ArrowLeft') prevImage();
    if (e.key === 'Escape') closeLightbox();
  });
</script>
