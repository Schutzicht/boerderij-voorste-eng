---
import Layout from '../../layouts/Layout.astro';
import ScrollReveal from '../../components/ui/ScrollReveal.astro';
import ParallaxImage from '../../components/ui/ParallaxImage.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'nl' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params;

const content = {
  nl: {
    title: "Accommodatie",
    headline: "Onze Verblijven",
    intro: "Kies voor een verblijf dat bij u past. Of u nu kiest voor de authentieke sfeer van 'De Oude Schuur' of de knusse 'Peerdestal', u geniet altijd van rust, ruimte en luxe.",
    rooms: [
      {
        title: "De Oude Schuur",
        desc: "Een sfeervol verblijf voor 2 personen, waar authentieke details en moderne luxe samenkomen. Geniet van de ruimte en het uitzicht.",
        img: "/images/real/rooms/oude-schuur/424671ca-f79e-4955-8a75-98dc99c25599_mw1280.webp",
        link: "/nl/accommodatie/de-oude-schuur",
        cta: "Bekijk De Oude Schuur"
      },
      {
        title: "De Peerdestal",
        desc: "Overnacht in de voormalige paardenstal, nu omgetoverd tot een luxe verblijf. Knus, comfortabel en van alle gemakken voorzien.",
        img: "/images/real/rooms/peerdestal/2602d22b-3fe3-4a70-8b4d-b3cf4cac2d5d_mw1280.webp",
        link: "/nl/accommodatie/de-peerdestal",
        cta: "Bekijk De Peerdestal"
      }
    ],
    rules: {
      title: "Algemene Informatie",
      items: [
        { label: "Check-in", value: "Vanaf 15:00" },
        { label: "Check-out", value: "Tot 10:30" },
        { label: "Roken", value: "Niet toegestaan" },
        { label: "Huisdieren", value: "Niet toegestaan" }
      ]
    }
  },
  en: {
    title: "Accommodation",
    headline: "Our Stays",
    intro: "Choose a stay that suits you. Whether you choose the authentic atmosphere of 'The Old Barn' or the cozy 'Horse Stable', you will always enjoy peace, space, and luxury.",
    rooms: [
      {
        title: "The Old Barn",
        desc: "An atmospheric stay for 2 people, where authentic details and modern luxury meet. Enjoy the space and the view.",
        img: "/images/real/rooms/oude-schuur/424671ca-f79e-4955-8a75-98dc99c25599_mw1280.webp",
        link: "/en/accommodation/de-oude-schuur",
        cta: "View The Old Barn"
      },
      {
        title: "The Horse Stable",
        desc: "Stay in the former horse stable, now transformed into a luxury stay. Cozy, comfortable, and fully equipped.",
        img: "/images/real/rooms/peerdestal/2602d22b-3fe3-4a70-8b4d-b3cf4cac2d5d_mw1280.webp",
        link: "/en/accommodation/de-peerdestal",
        cta: "View The Horse Stable"
      }
    ],
    rules: {
      title: "General Information",
      items: [
        { label: "Check-in", value: "From 15:00" },
        { label: "Check-out", value: "Until 10:30" },
        { label: "Smoking", value: "Not allowed" },
        { label: "Pets", value: "Not allowed" }
      ]
    }
  },
  de: {
    title: "Unterkunft",
    headline: "Unsere Unterkünfte",
    intro: "Wählen Sie einen Aufenthalt, der zu Ihnen passt. Ob Sie sich für die authentische Atmosphäre der 'Alten Scheune' oder den gemütlichen 'Pferdestall' entscheiden, Sie genießen immer Ruhe, Weite und Luxus.",
    rooms: [
      {
        title: "Die Alte Scheune",
        desc: "Ein stimmungsvoller Aufenthalt für 2 Personen, wo authentische Details und moderner Luxus aufeinandertreffen. Genießen Sie den Raum und die Aussicht.",
        img: "/images/real/rooms/oude-schuur/424671ca-f79e-4955-8a75-98dc99c25599_mw1280.webp",
        link: "/de/accommodatie/de-oude-schuur",
        cta: "Die Alte Scheune ansehen"
      },
      {
        title: "Der Pferdestall",
        desc: "Übernachten Sie im ehemaligen Pferdestall, der jetzt in eine luxuriöse Unterkunft verwandelt wurde. Gemütlich, komfortabel und komplett ausgestattet.",
        img: "/images/real/rooms/peerdestal/2602d22b-3fe3-4a70-8b4d-b3cf4cac2d5d_mw1280.webp",
        link: "/de/accommodatie/de-peerdestal",
        cta: "Der Pferdestall ansehen"
      }
    ],
    rules: {
      title: "Allgemeine Informationen",
      items: [
        { label: "Check-in", value: "Ab 15:00" },
        { label: "Check-out", value: "Bis 10:30" },
        { label: "Rauchen", value: "Nicht erlaubt" },
        { label: "Haustiere", value: "Nicht erlaubt" }
      ]
    }
  }
};

const t = content[lang] || content.nl;
---

<Layout title={`Boerderij Voorste Eng - ${t.title}`} lang={lang}>
  
  <!-- Minimal Header -->
  <div class="relative bg-stone-50 py-32 text-center text-slate-800">
      <ScrollReveal animation="fade-up">
         <h1 class="font-heading text-5xl md:text-7xl font-light mb-8 text-bordeaux tracking-tight">{t.headline}</h1>
         <p class="max-w-2xl mx-auto text-stone-600 text-xl font-light leading-relaxed">{t.intro}</p>
         <div class="w-24 h-[1px] bg-bordeaux/30 mx-auto mt-12"></div>
      </ScrollReveal>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-32">
    
    <div class="space-y-24">
       {t.rooms.map((room, index) => (
         <div class={`flex flex-col ${index % 2 === 1 ? 'lg:flex-row-reverse' : 'lg:flex-row'} items-center gap-12 lg:gap-24`}>
            
            {/* Image Side */}
            <div class="w-full lg:w-1/2 relative group cursor-pointer" onclick={`window.location.href='${room.link}'`}>
               <ScrollReveal animation={index % 2 === 0 ? 'slide-left' : 'slide-right'} duration={1.2}>
                   <div class="relative overflow-hidden rounded-sm shadow-2xl aspect-[4/3]">
                      <ParallaxImage 
                        src={room.img} 
                        alt={room.title} 
                        class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
                      />
                      <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors duration-500"></div>
                   </div>
                   <!-- Decor element -->
                   <div class={`absolute -bottom-6 ${index % 2 === 0 ? '-right-6' : '-left-6'} w-24 h-24 border-b-2 border-${index % 2 === 0 ? 'r' : 'l'}-2 border-bordeaux/20 hidden lg:block`}></div>
               </ScrollReveal>
            </div>

            {/* Content Side */}
            <div class="w-full lg:w-1/2">
                <ScrollReveal animation="fade-up" delay={0.2}>
                    <h2 class="text-4xl font-heading font-light text-bordeaux mb-6">{room.title}</h2>
                    <p class="text-lg text-slate-600 leading-relaxed mb-8 font-light border-l-2 border-stone-200 pl-6">
                       {room.desc}
                    </p>
                    
                    <a href={room.link} class="inline-block px-8 py-4 bg-bordeaux text-white font-bold uppercase tracking-widest text-xs hover:bg-slate-900 transition-colors rounded-sm shadow-lg">
                        {room.cta}
                    </a>
                </ScrollReveal>
            </div>

         </div>
       ))}
    </div>

    <!-- Info / Rules Section -->
    <div class="mt-40 bg-foam-white p-12 lg:p-20 rounded-sm border border-stone-100 relative overflow-hidden">
        <ScrollReveal animation="fade-up">
            <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div>
                   <h3 class="text-3xl font-heading font-light text-bordeaux mb-6">{t.rules.title}</h3>
                   <p class="text-slate-600 mb-8">{lang === 'nl' ? 'Wij streven naar een zorgeloos verblijf. Hier zijn enkele algemene zaken.' : 'We strive for a carefree stay. Here are some general matters.'}</p>
                </div>
                
                <div class="bg-white p-8 shadow-sm">
                   <ul class="space-y-4">
                      {t.rules.items.map(item => (
                          <li class="flex justify-between items-center border-b border-stone-100 pb-2 last:border-0 last:pb-0">
                              <span class="font-bold text-slate-700">{item.label}</span>
                              <span class="text-slate-500">{item.value}</span>
                          </li>
                      ))}
                   </ul>
                </div>
            </div>
            
            <!-- Background Watermark -->
            <div class="absolute -top-20 -right-20 text-[20rem] font-heading text-bordeaux/5 leading-none select-none pointer-events-none">
                &
            </div>
        </ScrollReveal>
    </div>

  </div>
</Layout>
