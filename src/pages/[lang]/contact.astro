---
import Layout from '../../layouts/Layout.astro';
import ScrollReveal from '../../components/ui/ScrollReveal.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'nl' } },
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params;

const content = {
  nl: {
    title: "Contact",
    subtitle: "Wij horen graag van je",
    desc: "Wilt u een reservering aanvragen, of heeft u vragen over uw verblijf in 'De Oude Schuur' of 'De Peerdestal'? Wij staan klaar om u te helpen.",
    name: "Uw Naam",
    email: "E-mailadres",
    message: "Uw bericht",
    send: "Verstuur Bericht",
    addressTitle: "Locatie",
    address: "Dorpsstraat 1, 6731 AA Otterlo, Nederland",
    contactTitle: "Direct Contact",
    phone: "+31 (0)6 1234 5678",
    emailContact: "info@voorste-eng.nl"
  },
  en: {
    title: "Contact",
    subtitle: "We'd love to hear from you",
    desc: "Would you like to request a reservation, or do you have questions about your stay in 'The Old Barn' or 'The Horse Stable'? We are here to help.",
    name: "Your Name",
    email: "Email Address",
    message: "Your Message",
    send: "Send Message",
    addressTitle: "Location",
    address: "Dorpsstraat 1, 6731 AA Otterlo, The Netherlands",
    contactTitle: "Direct Contact",
    phone: "+31 (0)6 1234 5678",
    emailContact: "info@voorste-eng.nl"
  },
  de: {
    title: "Kontakt",
    subtitle: "Wir hören gerne von Ihnen",
    desc: "Möchten Sie eine Reservierung anfragen, oder haben Sie Fragen zu Ihrem Aufenthalt in 'Die Alte Scheune' oder 'Der Pferdestall'? Wir sind für Sie da.",
    name: "Ihr Name",
    email: "E-Mail-Adresse",
    message: "Ihre Nachricht",
    send: "Nachricht Senden",
    addressTitle: "Standort",
    address: "Dorpsstraat 1, 6731 AA Otterlo, Niederlande",
    contactTitle: "Direkter Kontakt",
    phone: "+31 (0)6 1234 5678",
    emailContact: "info@voorste-eng.nl"
  }
};

const t = content[lang] || content.nl;
---

<Layout title={`Boerderij Voorste Eng - ${t.title}`} lang={lang}>
  <div class="relative min-h-screen bg-stone-50 pt-32 pb-24 overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-white/40 blur-3xl rounded-full -mr-20 -mt-20"></div>
    <div class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-bordeaux/5 blur-3xl rounded-full -ml-20 -mb-20"></div>

    <div class="max-w-7xl mx-auto px-4 relative z-10">
      
      <!-- Header Section -->
      <header class="text-center max-w-3xl mx-auto mb-20">
        <ScrollReveal animation="fade-up" duration={1}>
           <span class="text-xs font-bold tracking-[0.3em] uppercase text-bordeaux mb-4 block">{t.subtitle}</span>
           <h1 class="font-heading text-5xl md:text-7xl font-light text-slate-900 mb-8 leading-tight">{t.title}</h1>
           <div class="w-12 h-[1px] bg-bordeaux/30 mx-auto mb-8"></div>
           <p class="text-slate-600 text-lg md:text-xl font-light leading-relaxed">
             {t.desc}
           </p>
        </ScrollReveal>
      </header>

      <div class="grid lg:grid-cols-12 gap-12 items-start">
        
        <!-- Left Column: Contact Info -->
        <div class="lg:col-span-5 space-y-12 h-full flex flex-col justify-center">
            <ScrollReveal animation="slide-left" duration={1} delay={0.2}>
                <div class="bg-white/60 backdrop-blur-sm p-10 md:p-12 border border-white rounded-sm shadow-sm hover:shadow-md transition-all duration-500">
                    <div class="space-y-10">
                        <!-- Location -->
                        <div class="flex gap-6">
                            <div class="w-12 h-12 rounded-full bg-bordeaux/5 flex items-center justify-center shrink-0">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-6 h-6 text-bordeaux"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
                            </div>
                            <div>
                                <h3 class="font-heading text-xl text-slate-900 mb-2">{t.addressTitle}</h3>
                                <p class="text-slate-600 font-light leading-relaxed">{t.address}</p>
                            </div>
                        </div>

                        <!-- Direct Contact -->
                        <div class="flex gap-6">
                            <div class="w-12 h-12 rounded-full bg-bordeaux/5 flex items-center justify-center shrink-0">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-6 h-6 text-bordeaux"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
                            </div>
                            <div>
                                <h3 class="font-heading text-xl text-slate-900 mb-2">{t.contactTitle}</h3>
                                <div class="space-y-1">
                                    <p class="text-slate-600 font-light">{t.phone}</p>
                                    <p class="text-slate-600 font-light">{t.emailContact}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </ScrollReveal>

            <!-- Decorative Visual -->
            <div class="hidden lg:block">
                 <ScrollReveal animation="fade-up" delay={0.4}>
                     <div class="relative rounded-sm overflow-hidden aspect-video shadow-lg transition-all duration-700">
                         <img src="/images/real/exterior/exterior-2.avif" class="w-full h-full object-cover" alt="Veluwe Scenic View" />
                         <div class="absolute inset-0 bg-bordeaux/10"></div>
                     </div>
                 </ScrollReveal>
            </div>
        </div>

        <!-- Right Column: Form -->
        <div class="lg:col-span-7">
            <ScrollReveal animation="slide-right" duration={1} delay={0.3}>
                <div class="bg-white p-10 md:p-16 rounded-sm shadow-xl border border-stone-100">
                    <form name="contact" method="POST" data-netlify="true" class="space-y-10">
                        <div class="grid md:grid-cols-2 gap-10">
                            <!-- Name -->
                            <div class="relative group">
                                <input type="text" id="name" name="name" required placeholder=" " 
                                       class="peer w-full bg-transparent border-b border-stone-200 py-3 text-slate-800 placeholder-transparent focus:outline-none focus:border-bordeaux transition-all" />
                                <label for="name" 
                                       class="absolute left-0 -top-3.5 text-xs font-medium text-stone-400 transition-all 
                                              peer-placeholder-shown:text-base peer-placeholder-shown:text-stone-400 peer-placeholder-shown:top-3 
                                              peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-bordeaux">
                                    {t.name}
                                </label>
                            </div>

                            <!-- Email -->
                            <div class="relative group">
                                <input type="email" id="email" name="email" required placeholder=" " 
                                       class="peer w-full bg-transparent border-b border-stone-200 py-3 text-slate-800 placeholder-transparent focus:outline-none focus:border-bordeaux transition-all" />
                                <label for="email" 
                                       class="absolute left-0 -top-3.5 text-xs font-medium text-stone-400 transition-all 
                                              peer-placeholder-shown:text-base peer-placeholder-shown:text-stone-400 peer-placeholder-shown:top-3 
                                              peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-bordeaux">
                                    {t.email}
                                </label>
                            </div>
                        </div>

                        <!-- Message -->
                        <div class="relative group">
                            <textarea id="message" name="message" rows="5" required placeholder=" " 
                                      class="peer w-full bg-transparent border-b border-stone-200 py-3 text-slate-800 placeholder-transparent focus:outline-none focus:border-bordeaux transition-all resize-none"></textarea>
                            <label for="message" 
                                   class="absolute left-0 -top-3.5 text-xs font-medium text-stone-400 transition-all 
                                          peer-placeholder-shown:text-base peer-placeholder-shown:text-stone-400 peer-placeholder-shown:top-3 
                                          peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-bordeaux">
                                {t.message}
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="pt-6">
                            <button type="submit" class="group relative w-full md:w-auto px-12 py-5 bg-bordeaux text-white overflow-hidden rounded-full transition-all hover:bg-slate-900 shadow-lg hover:shadow-2xl hover:-translate-y-1">
                                <span class="relative z-10 font-bold tracking-widest uppercase text-xs">{t.send}</span>
                            </button>
                        </div>
                    </form>
                </div>
            </ScrollReveal>
        </div>

      </div>
    </div>
  </div>
</Layout>
